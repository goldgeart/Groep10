                        <input type="text" name="Laag 2" value="@bekleding2 @type2 @vulling2 @decoratie2"><br></div>
                            <div id="laag3" style="display: @disp3;">
        Laag 3:<br>
                        <input type="text" name="Laag 3" value="@bekleding3 @type3 @vulling3 @decoratie3"><br></div>
                        <div id="laag4" style="display: @disp4;">
        Laag 4:<br>
                        <input type="text" name="Laag 4" value="@bekleding4 @type4 @vulling4 @decoratie4"><br></div>
        Allergieën:<br>
                        <input type="text" name="Allergie" value="@noten @lactose @gluten"><br>
        Prijs indicatie:<br>
                        <input type="text" name="Prijs" value="@PrijsIndicatie"><br>
        Foto (link):<br>
                        <input type="text" name="Foto" value="@foto"><br>
                        comments:<br>
                        <textarea disabled name="texta">@textarea</textarea><br>
                    </div>
                </div>
            </div>

            <div id="knoppen">
                <input type="submit" value="Ja, het klopt.">
                <input type="reset" value="Herstellen.">
            </div>

        </form>

    </body>
</html>
