    if(!IsPost){
            var laag1 = "SELECT * FROM Lagen WHERE LaagID=1";
            var row1 = db.QuerySingle(laag1,1);
            if(row1 != null) {
                bekleding1 = row1.Bekleding;
                type1 = row1.Type;
                vulling1 = row1.Vulling;
                decoratie1 = row1.Decoratie;
            }
            var laag2 = "SELECT * FROM Lagen WHERE LaagID=2";
            var row2 = db.QuerySingle(laag2,1);
            if(row2 != null) {
                bekleding2 = row2.Bekleding;
                type2 = row2.Type;
                vulling2 = row2.Vulling;
                decoratie2 = row2.Decoratie;
            }
            var laag3 = "SELECT * FROM Lagen WHERE LaagID=3";
            var row3 = db.QuerySingle(laag3,1);
            if(row3 != null) {
                bekleding3 = row3.Bekleding;
                type3 = row3.Type;
                vulling3 = row3.Vulling;
                decoratie3 = row3.Decoratie;
            }
            var laag4 = "SELECT * FROM Lagen WHERE LaagID=4";
            var row4 = db.QuerySingle(laag4,1);
            if(row4 != null) {
                bekleding4 = row4.Bekleding;
                type4 = row4.Type;
                vulling4 = row4.Vulling;
                decoratie4 = row4.Decoratie;
            }

            var dbCommand = "SELECT * FROM Factuur WHERE ID = 1";
            var row = db.QuerySingle(dbCommand, 1);
                if(row != null) {
                    Naam = row.Naam;
                    Adres = row.Adres;
                    Postcode = row.Postcode;
                    Woonplaats = row.Woonplaats;
                    Telefoonnummer = row.Telefoonnummer;
                    GewensteDatum = row.datum;
                    AantalPersonen = row.Personen;
                    AantalLagen = row.lagen;
                    noten = row.noten;
                    gluten = row.gluten;
                    lactose = row.lactose;
                    PrijsIndicatie = row.Prijsindicatie;
                    type = row.type;
                    Email = row.Email;
                    foto = row.foto;
                    textarea = row.comments;

        }

            if(AantalLagen == "1"){
         disp2 = "none";
         disp3 = "none";
         disp4 = "none";
    }
    if(AantalLagen == "2"){
         disp2 = "block";
         disp3 = "none";
         disp4 = "none";
    }
    if(AantalLagen == "3"){
         disp2 = "block";
         disp3 = "block";
         disp4 = "none";
    }
    if(AantalLagen == "4"){
         disp2 = "block";
         disp3 = "block";
         disp4 = "block";
    }

        }
        if(IsPost){
            Response.Redirect("index.cshtml");
        }
}

<!DOCTYPE html>
<html>
    <head>
        <link href="css/reset.css" rel="stylesheet" type="text/css" />
        <link href="css/fondanti.css" rel="stylesheet" type="text/css" />
        <meta charset="utf-8" />
        <title>Verstuur bestelling.</title>
    </head>
    <body>

        <a href="index.cshtml"><div id="top-header"><h2 id="Hoofdtekst">Controleer uw gegevens.</h2></div></a>

        <form action="MAILTO:ducod16@gmail.com?subject=Taart Bestelling. "method="post" enctype="text/plain">
            <div id="col-sm-12 col-md-12">
                <div class="col-sm-6 col-md-6">
                    <div id="KlantGegevens">

                        <input type="hidden" name="Klant informatie">
            Volledige naam:<br>
                        <input type="text" name="Naam" value="@Naam"></br>
            Adres:<br>
                        <input type="text" name="Adres" value="@Adres"></br>
            Postcode:<br>
                        <input type="text" name="Postcode" value="@Postcode" maxlength="6"></br>
            Woonplaats:<br>
                        <input type="text" name="Woonplaats" value="@Woonplaats"></br>
            Telefoon nummer:<br>
                        <input type="text" name="Telefoonnummer" value="@Telefoonnummer" maxlength="11"></br>
            Datum:<br>
                        <input type="date" name="Datum" value="@GewensteDatum"></br>
                        E-mail:<br>
                        <input type="text" name="Datum" value="@Email"></br>
                    </div>
                </div>


                <div class="col-sm-6 col-md-6">
                    <div id="TaartInformatie">

                        <input type="hidden" name="Taart informatie">
        Taart type:<br>
                        <input type="text" name="Taart-Type" value="@type"><br>
        Aantal personen:<br>
                        <input type="text" name="Taart-Type" value="@AantalPersonen"><br>
                        <div id="laag1">
        Laag 1:<br>
                            <input type="text" name="Laag 1" value="@bekleding1 @type1 @vulling1 @decoratie1"><br>
